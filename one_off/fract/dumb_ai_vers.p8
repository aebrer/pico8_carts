function p()
if(r()>.5)srand(seed)
if(r()>.9)srand(seed)
end

function s(x0, y0, x1, y1)
	p()
	line(x0,y0,x1,y1,r(7))
	if (x1-x0 < 2 and y1-y0 < 2) flip()
	if(r()>0.999)cls()
	px=r(x0+x1)+x0
	py=r(y0+y1)+y0
	px1=(r(px+x1)+px)/2
	py1=(r(py+y1)+py)/2
	s(fr(px),fr(py),fr(px1),fr(py1))
end

function fr(n)
 if(r()>.9)sspr(0,0,128,128,2,2,124,124)flip()
	if(n>128)return r(n)
 return n
end

